{% extends "layouts/main.twig" %}

{% block content %}
<div style="margin-bottom: 45px">
    <h1>Post Edit</h1>
    <form class="form-post" action="" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" value="{{ post.title }}">
        </div>
        <div>
            <label for="published_at">Published at</label>
            <input type="date" name="published_at" value="{{ post.published_at }}">
        </div>
        <div>
            <label for="content">Content</label><br>
            <textarea name="content" id="content" style="width: 100%" rows="30">{{ post.content }}</textarea>
        </div>
        <div>
            <label for="published_at">Publish</label>
            <input type="checkbox" {{ post.status ? 'checked' : '' }} name="status" value="1">
        </div>
        <div>
            <button type="submit">Update</button>
        </div>
    </form>
</div>
{% include 'layouts/script_create.twig' %}
{% endblock %}